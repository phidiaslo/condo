<%= simple_form_for(@owner) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
      <%= f.input :name, label: 'Full Name', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :ic_no, label: 'I.C. No.', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :address, label: 'Postal Address', input_html: { :rows => 3, class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :email, label: 'Email Address', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :mobile_no, label: 'Mobile No.', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :emergency_no, label: 'Emergency Contact No.', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :property_name, label: 'Property', prompt: 'Select Property', collection: @owner.select_property, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :lot_no, label: 'Unit No.', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :ref_no, label: 'Ref No.', input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>
