<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :inv_no %>
    <%= f.input :inv_date %>
    <%= f.input :due_date %>
    <%= f.input :property_name %>
    <%= f.input :lot_no %>
    <%= f.input :recipient %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
