<div class="container">

<h1>Invoices</h1>

<div class="button-bar">
  <%= link_to 'Add Invoice', new_invoice_path, class: "btn btn-button btn-shadow" %> <%= link_to 'Add Credit Note', new_invoice_path, class: "btn btn-button btn-shadow" %> <%= link_to 'Import Invoices', new_invoice_path, class: "btn btn-button btn-shadow" %> <%= link_to 'Export Invoices', new_invoice_path, class: "btn btn-button btn-shadow" %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Inv no</th>
      <th>Inv date</th>
      <th>Due date</th>
      <th>Property</th>
      <th>Lot no</th>
      <th>Recipient</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.inv_no %></td>
        <td><%= invoice.inv_date.strftime("%b %-d, %Y") %></td>
        <td><%= invoice.due_date.strftime("%b %-d, %Y") %></td>
        <td><%= invoice.property_name %></td>
        <td><%= invoice.lot_no %></td>
        <td><%= invoice.recipient %></td>
        <td><%= invoice.description %></td>
        <td><%= number_to_currency(invoice.amount) %></td>
        <td><%= invoice.status %></td>
        <td><%= link_to 'View', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
